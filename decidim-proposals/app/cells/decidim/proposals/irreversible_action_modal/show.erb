<%= button_reveal_modal %>

<div id="<%= modal_id %>" class="reveal" data-reveal aria-labelledby="<%= modal_title %>" aria-hidden="true" role="dialog">
  <div class="reveal__header">
    <h3 class="reveal__title">
      <%= modal_title %>
    </h3>

    <button class="close-button" data-close aria-label="<%= close_label %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="row">
    <div class="columns">
      <p>
        <%= modal_body %>
      </p>
    </div>

    <div class="columns medium-10 medium-centered">
      <div class="row">
        <div class="columns medium-6">
          <button class="clear button secondary expanded" type="button">
            <%= close_label %>
          </button>
        </div>

        <div class="columns medium-6">
          <%= button_continue %>
        </div>
      </div>
    </div>
  </div>
</div>
