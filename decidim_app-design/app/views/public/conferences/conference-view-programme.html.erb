<% @activesection = "programme" %>

<%= partial "template_top" %>

<main>
  <%= partial "conferences_hero" %>
  <section class="wrapper-home">
    <div class="row">
      <div class="columns section view-side mediumlarge-4 large-3">
        <%= partial "conferences_nav" %>
      </div>
      <div class="columns mediumlarge-8">
        <h1 class="section-heading">Programa</h1>
        <div class="conference-programme">
          <% time = Time.new(2018, 1, 1, 9, 0, 0) %>
          <div class="row collapse">
            <div class="column medium-2">
              Día
            </div>
            <div class="column medium-10">
              <a href="#" class="button button--nomargin button--sc secondary light">Mércores 28 oct 2018</a>
              <a href="#" class="button button--nomargin button--sc secondary light">Xoves 29 oct 2018</a>
              <a href="#" class="button button--nomargin button--sc secondary light">Venres 30 oct 2018</a>
            </div>
          </div>
          <%= render partial: page_path("conferences") + "/conference-programme-item", locals: { s: time.advance(minutes: 30), e: time.advance(hours: 2) } %>
          <%= render partial: page_path("conferences") + "/conference-programme-item", locals: { timebreak: true, s: time.advance(hours: 2), e: time.advance(hours: 2, minutes: 30) } %>
          <%= render partial: page_path("conferences") + "/conference-programme-item", locals: { s: time.advance(hours: 2, minutes: 30), e: time.advance(hours: 4, minutes: 30) } %>
          <%= render partial: page_path("conferences") + "/conference-programme-item", locals: { timebreak: true, s: time.advance(hours: 4, minutes: 30), e: time.advance(hours: 5, minutes: 30) } %>
          <%= render partial: page_path("conferences") + "/conference-programme-item", locals: { s: time.advance(hours: 5, minutes: 30), e: time.advance(hours: 7) } %>
          <%= render partial: page_path("conferences") + "/conference-programme-item", locals: { s: time.advance(hours: 7), e: time.advance(hours: 8, minutes: 30) } %>
        </div>
      </div>
    </div>
  </section>
</main>

<%= partial "template_bottom" %>
