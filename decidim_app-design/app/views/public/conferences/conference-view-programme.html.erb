<% @activesection = "programme" %>

<%= partial "template_top" %>

<main>
  <%= partial "conferences_hero" %>
  <section class="wrapper-home">
    <div class="row">
      <div class="columns section view-side mediumlarge-4 large-3">
        <%= partial "conferences_nav" %>
      </div>
      <div class="columns mediumlarge-8">
        <h1 class="section-heading">Programa</h1>
        <div class="conference-programme">
          <div class="row collapse">
            <div class="column medium-2">
              Día
            </div>
            <div class="column medium-10">
              <a href="#" class="button button--nomargin button--sc secondary light">Mércores 28 oct 2018</a>
              <a href="#" class="button button--nomargin button--sc secondary light">Xoves 29 oct 2018</a>
              <a href="#" class="button button--nomargin button--sc secondary light">Venres 30 oct 2018</a>
            </div>
          </div>
          <div class="row collapse">
            <div class="row programme-header">
              <div class="column medium-2 programme-time">
                10:00 - 12:00
              </div>
              <div class="column medium-10 programme-title">
                Introducción y bienvenida
              </div>
            </div>
            <div class="row">
              <div class="column medium-10 medium-push-2">
                <div class="programme-resume">Pensaremos y debatiremos colectivamente las potencialidades de Decidim en el desarrollo de procesos de participación ciudadana. Recogeremos experiencias, identificaremos oportunidades y retos de las herramientas digitales</div>
                <div class="programme-extra">
                  <div class="row">
                    <div class="column medium-2">
                      <strong>Ponentes</strong>
                    </div>
                    <div class="column medium-10">
                      <%= render layout: "public/components/collapsible-list", locals: { text: raw("y 6 más"), size: 3, classText: "" } do %>
                      <% 9.times do %>
                      <%= partial "author_data", { nick: false, small: true } %>
                      <% end %>
                      <% end %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="column medium-2">
                      <strong>Ubicación</strong>
                    </div>
                    <div class="column medium-10">
                      <u><%= Faker::Address.community %></u>&nbsp;<span><%= Faker::Address.full_address %></span>
                    </div>
                  </div>
                  <div class="row">
                    <div class="column medium-2">
                      <strong>Contenido</strong>
                    </div>
                    <div class="column medium-10">
                      No disponible
                    </div>
                  </div>
                  <div class="row">
                    <div class="column medium-2">
                      <strong>Streaming</strong>
                    </div>
                    <div class="column medium-10">
                      <u><%= Faker::Internet.url %></u>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row collapse">
            <div class="row programme-header">
              <div class="column medium-2 programme-time">
                12:00 - 12:30
              </div>
              <div class="column medium-10 programme-title">
                Coffee break
              </div>
            </div>
          </div>
          <div class="row collapse">
            <% seed = SecureRandom.hex(3).to_s %>
            <div class="row">
              <div class="column medium-10 medium-push-2">
                <ul class="tabs buttons__row" id="conference-row-<%= seed %>-tabs"
                  data-tabs>
                  <% speechs = Faker::Number.between(1, 4) %>
                  <% speechs.times do |i| %>
                  <li class="tabs-title<%= " is-active" if i == 0 %>">
                    <!-- Wrap button in an anchor to make foundation tabs work -->
                    <a href="#conference-row-<%= seed %>-tab<%= i %>">
                      <button class="button button--shadow secondary tiny light">Track #<%= Faker::Hacker.abbreviation %></button>
                    </a>
                  </li>
                  <% end %>
                </ul>
              </div>
            </div>
            <div class="tabs-content" data-tabs-content="conference-row-<%= seed %>-tabs">
              <% speechs.times do |i| %>
              <div class="tabs-panel<%= " is-active" if i == 0 %>" id="conference-row-<%= seed %>-tab<%= i %>">
                <%= render partial: page_path("conferences") + "/conference-programme-item" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%= partial "template_bottom" %>
