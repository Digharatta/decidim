<% @activesection = "speakers" %>

<%= partial "template_top" %>

<main>
  <%= partial "conferences_hero" %>
  <section class="wrapper-home">
    <div class="row">
      <div class="columns section view-side mediumlarge-4 large-3">
        <%= partial "conferences_nav" %>
      </div>
      <div class="columns mediumlarge-8">
        <h1 class="section-heading">Ponentes</h1>
        <div class="row small-up-2 medium-up-4">
          <% 12.times do %>
          <div class="column speaker">
            <div class="speaker-img-wrapper">
              <div class="speaker-img">
                <%= image_tag Faker::Fillmurray.image(false, Faker::Number.between(10, 500), Faker::Number.between(10, 500)) %>
              </div>
            </div>
            <div class="speaker-data">
              <div class="data-name"><%= Faker::Name.name %></div>
              <div class="data-role"><%= Faker::Company.profession %> Â· <%= Faker::Internet.domain_name %></div>
              <div class="data-extra"><a href="" class="card-link">@<%= Faker::Internet.username %></a>&nbsp;<span><u>more info</u></span></div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </section>
</main>

<%= partial "template_bottom" %>
