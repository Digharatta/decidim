<article class="card">
  <div class="card__content">
    <% if title.present? %>
      <div class="card__header">
        <h5 class="card__title">
          <%= title %>
        </h5>
      </div>
    <% end %>

    <% if body.present? %>
      <p>
       <%= body %>
      </p>
    <% end %>

    <% if id.present? && Rails.env.development? %>
      <p>
        <code><%= model.class.name %>#<%= id %></code>
      </p>
    <% end %>
  </div>
</article>
